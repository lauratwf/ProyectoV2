    <!-- TemplateEndEditable --><script>
		$(document).ready(function(){
			$("#closeMenu").hide();
			$("#textoscroll").hide();
			$("#iconoCerrarScroll").hide();
			$("#openMenu").click(function(){
				$("#contenedor").fadeIn(200);
				$("#parteArriba").hide();
				$("#parteAbajo").hide();
				$("#openMenu").hide("normal");
				$("#closeMenu").show("normal");
				$("#redesSociales").hide();
			});
	
			$("#closeMenu").click(function(){
				$("#contenedor").fadeOut(200);
				$("#openMenu").show("normal");
				$("#parteArriba").show();
				$("#parteAbajo").show();
				$("#closeMenu").hide("normal");
				$("#redesSociales").show();
			});
			
			$("#flechaClic").click(function(){
				$("#textoscroll").fadeIn(200);
				$("#nombreEmpresa").hide();
				$("#parteArriba").hide();
				$("#parteAbajo").hide();
				$("#openMenu").hide("normal");
				$("#redesSociales").hide();
				$("#iconoCerrarScroll").show();
			});
			
			$("#iconoCerrarScroll").click(function(){
				$("#textoscroll").fadeOut(200);
				$("#nombreEmpresa").show();
				$("#parteArriba").show();
				$("#parteAbajo").show();
				$("#openMenu").show("normal");
				$("#redesSociales").show();
				$("#iconoCerrarScroll").hide();
			});
	
		});
